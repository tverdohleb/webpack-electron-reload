{
  "name": "webpack-electron-reload",
  "version": "1.0.0",
  "description": "Webpack plugin which restarts electron process on recompile",
  "main": "dist/index.js",
  "files": [
    "./dist"
  ],
  "typings": "./dist/index.d.ts",
  "repository": "git@github.com:tverdohleb/webpack-electron-reload.git",
  "homepage": "https://github.com/tverdohleb/webpack-electron-reload",
  "bugs": {
    "url": "https://github.com/tverdohleb/webpack-electron-reload/issues"
  },
  "author": "Valeriy Tverdohleb <v@tverdohleb.com>",
  "license": "MIT",
  "keywords": [
    "electron",
    "webpack",
    "webpack-plugin",
    "plugin",
    "live-reload"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "yarn lint --fix"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cross-spawn": "^7.0.0"
  },
  "peerDependencies": {
    "electron": ">=0.0.0"
  },
  "devDependencies": {
    "husky": "4.2.3",
    "lint-staged": "9.5.0",
    "prettier": "1.18.2",
    "tslint": "6.1.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.8.3"
  }
}
