{
  "name": "webpack-electron-reload",
  "version": "0.0.1",
  "description": "Webpack plugin which restarts electron process on recompile",
  "main": "dist/index.js",
  "files": [
    "./dist"
  ],
  "typings": "./dist/index.d.ts",
  "repository": "git@github.com:tverdohleb/webpack-electron-reload.git",
  "homepage": "https://github.com/tverdohleb/webpack-electron-reload",
  "bugs": {
    "url": "https://github.com/tverdohleb/webpack-electron-reload/issues"
  },
  "author": "Valeriy Tverdohleb <v@tverdohleb.com>",
  "license": "MIT",
  "keywords": [
    "electron",
    "webpack",
    "webpack-plugin",
    "plugin",
    "live-reload"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "yarn lint --fix"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cross-spawn": "^6.0.5"
  },
  "peerDependencies": {
    "electron": ">=0.0.0"
  },
  "devDependencies": {
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.2"
  }
}
